        <item name="textAppearanceHeadline4">@style/TextAppearance.RugbyRanker.Headline4</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.RugbyRanker.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.RugbyRanker.Body1</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RugbyRanker.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.RugbyRanker.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.RugbyRanker.LargeComponent</item>
        <item name="listPreferredItemHeightSmall">@dimen/height_row</item>
        <item name="navigationViewStyle">@style/Widget.RugbyRanker.NavigationView</item>
        <item name="actionBarSize">@dimen/height_row</item>
        <item name="appBarLayoutStyle">@style/Widget.RugbyRanker.AppBarLayout</item>
        <item name="tabStyle">@style/Widget.RugbyRanker.TabLayout</item>
        <item name="materialButtonStyle">@style/Widget.RugbyRanker.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.RugbyRanker.FloatingActionButton</item>
        <item name="chipStyle">@style/Widget.RugbyRanker.Chip</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.RugbyRanker.BottomSheetDialog</item>
        <item name="listPopupWindowStyle">@style/Widget.MaterialComponents.ListPopupWindow</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.RugbyRanker.MaterialAlertDialog</item>
        <item name="snackbarStyle">@style/Widget.RugbyRanker.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.RugbyRanker.Snackbar.TextView</item>
        <item name="materialCardViewStyle">@style/Widget.RugbyRanker.CardView</item>
        <item name="progressIndicatorStyle">@style/Widget.RugbyRanker.ProgressIndicator</item>
    </style>

    <style name="Theme.RugbyRanker" parent="Base.Theme.RugbyRanker">
        <item name="colorPrimary">@color/world_rugby_green_700</item>
        <item name="colorPrimaryVariant">@color/world_rugby_green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/world_rugby_blue_900</item>
        <item name="colorSecondaryVariant">@color/world_rugby_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/world_rugby_red_600</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Base.Theme.RugbyRanker.OssLicenses" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="fontFamily">@font/rajdhani_semibold</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.RugbyRanker.Headline6</item>
        <item name="android:listPreferredItemHeight">@dimen/height_row</item>
        <item name="actionBarStyle">@style/Widget.RugbyRanker.ActionBar</item>
    </style>

    <style name="Theme.RugbyRanker.OssLicenses" parent="Base.Theme.RugbyRanker.OssLicenses">
        <item name="colorPrimary">@color/world_rugby_green_700</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.Toolbar" parent="">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Base.ThemeOverlay.RugbyRanker.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorControlHighlight">@color/on_surface_32</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="bottomSheetStyle">@style/Widget.RugbyRanker.BottomSheet.Modal</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.BottomSheetDialog" parent="Base.ThemeOverlay.RugbyRanker.BottomSheetDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/world_rugby_blue_900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/world_rugby_blue_900</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Base.ThemeOverlay.RugbyRanker.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.RugbyRanker.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.RugbyRanker.Body.Text</item>
        <item name="android:windowAnimationStyle">@style/Animation.RugbyRanker.AlertDialog</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.MaterialAlertDialog" parent="Base.ThemeOverlay.RugbyRanker.MaterialAlertDialog">
        <item name="colorSecondary">@color/world_rugby_green_700</item>
    </style>

    <style name="ThemeOverlay.RugbyRanker.PrimarySecondary" parent="">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

</resources>
