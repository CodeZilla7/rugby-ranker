<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RugbyRanker.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="insetForeground">@android:color/transparent</item>
        <item name="itemIconPadding">@dimen/space</item>
        <item name="itemHorizontalPadding">@dimen/space</item>
        <item name="itemTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="itemShapeInsetStart">0dp</item>
        <item name="itemShapeInsetTop">0dp</item>
        <item name="itemShapeInsetEnd">0dp</item>
        <item name="itemShapeInsetBottom">0dp</item>
        <item name="itemTextColor">@color/navigation_item</item>
    </style>

    <style name="Widget.RugbyRanker.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.RugbyRanker.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="tabPaddingStart">@dimen/space</item>
        <item name="tabPaddingEnd">@dimen/space</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMinWidth">0dp</item>
    </style>

    <style name="Widget.RugbyRanker.ActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:theme">@style/ThemeOverlay.RugbyRanker.Toolbar</item>
        <item name="elevation">@dimen/elevation_action_bar</item>
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.RugbyRanker.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">@dimen/height_row</item>
        <item name="android:minHeight">@dimen/height_row</item>
        <item name="android:paddingLeft">@dimen/space</item>
        <item name="android:paddingRight">@dimen/space</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">@dimen/space</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Widget.RugbyRanker.Button.RoundedTopStart">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RugbyRanker.RoundedTopStart</item>
    </style>

    <style name="Widget.RugbyRanker.Button.Icon">
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Widget.RugbyRanker.Button.Icon.RoundedTopEnd">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RugbyRanker.RoundedTopEnd</item>
    </style>

    <style name="Widget.RugbyRanker.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
    </style>

    <style name="Widget.RugbyRanker.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="closeIconTint">?attr/colorOnSurface</item>
        <item name="chipIconTint">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="Widget.RugbyRanker.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RugbyRanker.RoundedTopEnd</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="android:elevation">@dimen/elevation_bottom_sheet</item>
        <!-- Using a large value to ensure all content is shown on first show -->
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="Widget.RugbyRanker.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/space</item>
    </style>

    <style name="Widget.RugbyRanker.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="MaterialAlertDialog.RugbyRanker.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="MaterialAlertDialog.RugbyRanker.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.RugbyRanker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.RugbyRanker.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
    </style>

</resources>
